{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "ppIdentity": {
            "type": "string",
            "metadata": {
                "description": "Provide the resourceId of the User Managed Identity."
            }
        },
        "ppTenantDlp": {
            "type": "string",
            "defaultValue": "none",
            "allowedValues": [
                "high",
                "medium",
                "low",
                "none"
            ],
            "metadata": {
                "description": "Select if recommended DLP policies should be assigned at the tenant."
            }
        },
        "ppGuestMakerSetting": {
            "type": "string",
            "allowedValues": [
                "yes",
                "no"
            ],
            "defaultValue": "no",
            "metadata": {
                "description": "Select to enable/disable this setting."
            }
        },
        "ppAppSharingSetting": {
            "type": "string",
            "allowedValues": [
                "yes",
                "no"
            ],
            "defaultValue": "no",
            "metadata": {
                "description": "Select to enable/disable this setting."
            }
        },
        "ppEnvCreationSetting": {
            "type": "string",
            "allowedValues": [
                "yes",
                "no"
            ],
            "defaultValue": "no",
            "metadata": {
                "description": "Select to enable/disable this setting."
            }
        },
        "ppTrialEnvCreationSetting": {
            "type": "string",
            "allowedValues": [
                "yes",
                "no"
            ],
            "defaultValue": "no",
            "metadata": {
                "description": "Select to enable/disable this setting."
            }
        },
        "ppEnvCapacitySetting": {
            "type": "string",
            "allowedValues": [
                "yes",
                "no"
            ],
            "defaultValue": "no",
            "metadata": {
                "description": "Select to enable/disable this setting."
            }
        },
        "ppTenantIsolationSetting": {
            "type": "string",
            "defaultValue": "none",
            "allowedValues": [
                "inbound",
                "outbound",
                "both",
                "none"
            ],
            "metadata": {
                "description": "Select tenant isolation setting"
            }
        },   
     

        "ppDefaultRenameText": {
            "type": "string",
            "defaultValue": "''",
            "metadata": {
                "description": "Provide new display name for the _default_ Power Platform Environment in the tenant."
            }
        },
        "ppDefaultDlp": {
            "type": "string",
            "allowedValues": [
                "yes",
                "no"
            ],
            "defaultValue": "no",
            "metadata": {
                "description": "Select to enable/disable this setting."
            }
        },
        "ppDefaultManagedEnv": {
            "type": "string",
            "defaultValue": "no",
            "allowedValues": [
                "no",
                "yes"
            ],
            "metadata": {
                "description": "Select to enable/disable this setting."
            }
        },
        "ppDefaultManagedSharing": {
            "type": "string",
            "defaultValue": "no",
            "allowedValues": [
                "no",
                "yes"
            ],
            "metadata": {
                "description": "Select to enable/disable this setting."
            }
        },
        "ppCitizen": {
            "type": "string",
            "allowedValues": [
                "yes",
                "half",
                "no",
                "custom"
            ],
            "defaultValue": "no",
            "metadata": {
                "description": "Select environment type. Yes will enable with Dataverse, Half will create without Dataverse."
            }            
        },
        "ppCitizenNaming": {
            "type": "string",
            "defaultValue": "''",
            "metadata": {
                "description": "Provide naming convention for the citizen dev environments."
            }
        },
        "ppCitizenRegion": {
            "type": "string",
            "allowedValues": [
                "europe",
                "unitedstates",
                "asia",
                "japan",
                "india",
                "canada",
                "southamerica",
                "unitedkingdom",
                "france",
                "germany",
                "unitedarabemirates",
                "australia",
                "norway"
            ],
            "defaultValue": "unitedstates",
            "metadata": {
                "description": "Provide location for the citizen dev environments."
            }
        },
        "ppCitizenDlp": {
            "type": "string",
            "allowedValues": [
                "yes",
                "no"
            ],
            "defaultValue": "no",
            "metadata": {
                "description": "Select to enable/disable recommended DLP policies for citizen dev environments."
            }
        },
        "ppCitizenManagedEnv": {
            "type": "string",
            "defaultValue": "no",
            "allowedValues": [
                "no",
                "yes"
            ],
            "metadata": {
                "description": "Select to enable/disable this setting."
            }
        },           
        "ppCitizenAlm": {
            "type": "string",
            "allowedValues": [
                "yes",
                "no"
            ],
            "defaultValue": "no",
            "metadata": {
                "description": "Select if dedicated environments for Development, Test, and Production should be created for each landing zone"
            }
        },       
        "location": {
            "type": "string",
            "metadata": {
                "description": "Provide the Azure location for the deployments"
            }
        },
        "rgName": {
            "type": "string",
            "metadata": {
                "description": "Resource Group where the deploymentScript will be provisioned"
            }
        },
        "scriptUri": {
            "type": "string",
            "defaultValue": "https://raw.githubusercontent.com/BogdanCiobanu1982/industry/main/foundations/powerPlatform/referenceImplementation/auxiliary/powerPlatform/nsPowerPlatform.ps1",
            "metadata": {
                "description": "The uri pointing to the PowerShell script used in the deploymentScript"
            }
        },       
        "ppCitizenLanguage": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Select language for the environments."
            }
        },
        "ppCitizenCurrency": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Select the currency for the environments."
            }
        },       
        "ppD365SalesApp": {
            "type": "string",
            "defaultValue": "false",
            "metadata": {
                "description": "Dynamics 365 for Sales."
            }
        },
        "ppD365CustomerServiceApp": {
            "type": "string",
            "defaultValue": "false",
            "metadata": {
                "description": "Dynamics 365 for Customer Service."
            }
        },
        "ppD365FieldServiceApp": {
            "type": "string",
            "defaultValue": "false",
            "metadata": {
                "description": "Dynamics 365 for Field Service."
            }
        }        
    },
    "variables": {
        "deploymentName": "[take(concat(parameters('rgName'), '-initialize', '-', parameters('location')), 64)]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2021-04-01",
            "name": "[parameters('rgName')]",
            "location": "[parameters('location')]",
            "properties": {}
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "[variables('deploymentName')]",
            "resourceGroup": "[parameters('rgName')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups', parameters('rgName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "resources": [
                        {
                            "type": "Microsoft.Resources/deploymentScripts",
                            "apiVersion": "2020-10-01",
                            "name": "[concat(parameters('rgName'), '-deploymentScript')]",
                            "location": "[parameters('location')]",
                            "kind": "AzurePowerShell",
                            "identity": {
                                "type": "userAssigned",
                                "userAssignedIdentities": {
                                    "[parameters('ppIdentity')]": {}
                                }
                            },
                            "dependsOn": [

                            ],
                            "properties": {
                                "primaryScriptUri": "[parameters('scriptUri')]",
                                "arguments": "[concat('-PPGuestMakerSetting', ' ', parameters('PPGuestMakerSetting'),' ',
                                                    '-PPAppSharingSetting', ' ', parameters('ppAppSharingSetting'), ' ',
                                                    '-PPEnvCreationSetting', ' ', parameters('ppEnvCreationSetting'), ' ',
                                                    '-PPTrialEnvCreationSetting', ' ', parameters('ppTrialEnvCreationSetting'), ' ',
                                                    '-PPEnvCapacitySetting', ' ', parameters('ppEnvCapacitySetting'), ' ',
                                                    '-PPTenantDLP', ' ', parameters('ppTenantDlp'), ' ',
                                                    '-PPTenantIsolationSetting', ' ', parameters('ppTenantIsolationSetting'), ' ',                                                                                                   
                                                    '-PPDefaultRenameText', ' ', parameters('ppDefaultRenameText'), ' ',
                                                    '-PPDefaultDLP', ' ', parameters('ppDefaultDlp'), ' ',
                                                    '-PPDefaultManagedEnv', ' ', parameters('ppDefaultManagedEnv'), ' ',
                                                    '-PPDefaultManagedSharing', ' ', parameters('ppDefaultManagedSharing'), ' ',
                                                    '-PPCitizen', ' ', parameters('ppCitizen'), ' ',                                                                                            
                                                    '-PPCitizenNaming', ' ', parameters('ppCitizenNaming'), ' ',                                                    
                                                    '-PPCitizenLanguage', ' ', parameters('ppCitizenLanguage'), ' ',
                                                    '-PPCitizenCurrency', ' ', parameters('ppCitizenCurrency'), ' ',
                                                    '-PPCitizenRegion', ' ', parameters('ppCitizenRegion'), ' ',
                                                    '-PPCitizenDlp', ' ', parameters('ppCitizenDlp'), ' ',
                                                    '-PPCitizenManagedEnv', ' ', parameters('ppCitizenManagedEnv'), ' ',
                                                    '-PPCitizenAlm', ' ', parameters('ppCitizenAlm'), ' ',                                                    
                                                    '-ppD365SalesApp', ' ', parameters('ppD365SalesApp'), ' ',
                                                    '-ppD365CustomerServiceApp', ' ', parameters('ppD365CustomerServiceApp'), ' ',
                                                    '-ppD365FieldServiceApp', ' ', parameters('ppD365FieldServiceApp'), ' '                                                     
                                                    )]",
                                "azPowerShellVersion": "7.2",
                                "timeout": "PT120M",
                                "cleanupPreference": "Always",
                                "retentionInterval": "P1D"
                            }
                        }
                    ]
                }
            }
        }
    ],
    "outputs": {}
}
